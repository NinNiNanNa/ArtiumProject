<?xml version="1.0" encoding="UTF-8"?>

<!-- 마이바티스 Doctype 설정 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- Controller에서 Mapper의 함수를 호출하기 위한 interface를 namespace속성에 설정한다. -->
<mapper namespace="com.edu.springboot.jdbc.IExhibitionService">
	
	<select id="getTotalCount" resultType="int" parameterType="com.edu.springboot.jdbc.ParameterDTO">
		SELECT COUNT(*) FROM exhibition WHERE
		<choose>
			<when test="status == 1">ex_sdate <![CDATA[<=]]> sysdate AND ex_edate <![CDATA[>=]]> sysdate</when>
			<when test="status == 2">ex_sdate <![CDATA[>]]> sysdate</when>
			<when test="status == 3">ex_edate <![CDATA[<]]> sysdate</when>
		</choose>
		<!-- 검색어가 null, 빈값이 아닐때만 AND 추가절을 동적으로 추가한다. -->
		<if test="searchKeyword!=null and !searchKeyword.equals('')">
			AND ${searchField} LIKE '%'||#{searchKeyword}||'%'
		</if>
	</select>
	
	<select id="listPage"
		resultType="com.edu.springboot.jdbc.ExhibitionDTO"
		parameterType="com.edu.springboot.jdbc.ParameterDTO">
		SELECT * FROM (
			SELECT Tb.*, rownum rNum FROM (
				SELECT * FROM exhibition WHERE
				<choose>
					<when test="status == 1">ex_sdate <![CDATA[<=]]> sysdate AND ex_edate <![CDATA[>=]]> sysdate</when>
					<when test="status == 2">ex_sdate <![CDATA[>]]> sysdate</when>
					<when test="status == 3">ex_edate <![CDATA[<]]> sysdate</when>
				</choose>
				<if test="searchKeyword!=null and !searchKeyword.equals('')">
					AND ${searchField} LIKE '%'||#{searchKeyword}||'%'
				</if>
				ORDER BY ex_seq DESC
			)	Tb
		)
		WHERE rNum<![CDATA[>=]]>#{start} AND rNum<![CDATA[<=]]>#{end}
	</select>
	
	<select id="view" resultType="com.edu.springboot.jdbc.ExhibitionDTO"
		parameterType="com.edu.springboot.jdbc.ExhibitionDTO">
		SELECT * FROM exhibition WHERE ex_seq=#{ex_seq}
	</select>
	
	<update id="visitCount" parameterType="com.edu.springboot.jdbc.ExhibitionDTO">
		UPDATE exhibition SET ex_visitcount=ex_visitcount+1 WHERE ex_seq=#{ex_seq}
	</update>

</mapper>